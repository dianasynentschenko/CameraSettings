<Window x:Class="IPCameraSettings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:IPCameraSettings.ViewModels"
        Title="SettingsWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:UserViewModel />
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <Button Content="Load Settings" Command="{Binding LoadSettingsCommand}" />
            <Button Content="Save Settings" Command="{Binding SaveSettingsCommand}" />
            <TextBlock Text="Resolution:" />
            <TextBox Text="{Binding StreamSettings.Resolution}" />
            <TextBlock Text="FPS:" />
            <TextBox Text="{Binding StreamSettings.FPS}" />
        </StackPanel>
    </Grid>
</Window>