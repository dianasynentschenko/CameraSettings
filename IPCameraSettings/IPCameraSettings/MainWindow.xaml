<Window x:Class="IPCameraSettings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:IPCameraSettings.ViewModels"
        Title="Camera API - Login" Height="316" Width="317" Background="#E3F2FD">
    <Window.DataContext>
        <vm:UserViewModel />
    </Window.DataContext>
    <Grid Margin="10">
        <StackPanel Margin="0,65,0,0">
            <!-- IP Address -->
            <TextBlock Text="IP Address" Foreground="#1E88E5" FontWeight="Bold" Width="69" />
            <TextBox Text="{Binding IPAddress}" Width="150" />

            <!-- Username -->
            <TextBlock Text="Username" Foreground="#1E88E5" FontWeight="Bold" Width="57" />
            <TextBox Text="{Binding Username}" Width="150" />

            <!-- Password -->
            <TextBlock Text="Password" Foreground="#1E88E5" FontWeight="Bold" Width="53" />
            <PasswordBox PasswordChanged="PasswordBox_PasswordChanged" Width="150" />

            <!-- Login Button -->
            <Button Content="Login" Command="{Binding LoginCommand}" Width="70" Margin="0,10,0,0" 
                    Background="#1E88E5" Foreground="White" FontWeight="Bold" BorderThickness="0" />
        </StackPanel>
    </Grid>
</Window>